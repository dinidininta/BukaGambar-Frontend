<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_lighten_5</item>
        <item name="colorPrimaryDark">@color/pinkdarken2</item>
        <item name="colorAccent">@color/pinklight</item>
    </style>

    <style name="AppTheme" parent="AppTheme.base"/>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/pinkdarken2</item>
        <item name="android:textColorSecondary">@color/pinkdarken2</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingStart">@dimen/start</item>
        <item name="android:paddingEnd">@dimen/end</item>
        <item name="android:layout_marginBottom">@dimen/bottom</item>
    </style>

    <style name="FilePickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pinkdarken2</item>
        <item name="colorPrimaryDark">@color/pinkdarken2</item>
        <item name="colorAccent">@color/white</item>
    </style>


</resources>

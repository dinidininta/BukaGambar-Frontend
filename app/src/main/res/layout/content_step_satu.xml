<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/ket_barangTeks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keterangan_barang"
        android:layout_below="@id/toolbar_stepsatu"
        android:textSize="20sp"
        android:textColor="@color/grey_darken"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_of_step_satu"
        android:layout_below="@+id/ket_barangTeks"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="@dimen/accept_aset_width"
        android:layout_height="@dimen/accept_aset_height"
        android:src="@drawable/sukses"
        android:layout_marginBottom="@dimen/bottom"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/upload_selesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/start"
        android:paddingEnd="@dimen/end"
        android:layout_gravity="center_horizontal"
        android:text="@string/upload_selesai"
        android:textSize="@dimen/text_size_normal"
        android:textStyle="bold"/>

</LinearLayout>
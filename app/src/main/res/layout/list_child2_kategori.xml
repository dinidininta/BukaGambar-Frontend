<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/atribut_child_kategori"
        android:text="@string/s1_kategoribarang"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/grey"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/top"
        android:layout_marginTop="@dimen/bottom"/>

    <ImageButton
        android:layout_width="@dimen/cards_button_width"
        android:layout_height="@dimen/cards_button_height"
        android:id="@+id/chevron_child"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:tint="@color/grey_darken"
        android:layout_alignBottom="@+id/atribut_child_kategori"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/atribut_child_kategori"
        android:visibility="invisible"/>

</RelativeLayout>
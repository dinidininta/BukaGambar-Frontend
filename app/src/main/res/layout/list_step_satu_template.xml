<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/judul_atribut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nama_barang"
        android:textColor="@color/grey_darken"
        android:textSize="@dimen/list_size"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_atribut"
        android:text="@string/ket_nama_barang"
        android:textSize="@dimen/text_size"
        android:layout_below="@id/judul_atribut"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"/>

    <ImageButton
        android:layout_width="@dimen/cards_button_width"
        android:layout_height="@dimen/cards_button_height"
        android:id="@+id/chevron_step_satu"
        style="?android:attr/borderlessButtonStyle"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:tint="@color/grey"/>

</RelativeLayout>